<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h3>以下の内容で、送信する。</h3>

<%= form_for(@tweet) do |f| %>
  <%= f.hidden_field :content %>

  <p>Content:<%= @tweet.content %></p>
  <%= f.submit "送信する", class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
<% end %>

  </div>
</div>
